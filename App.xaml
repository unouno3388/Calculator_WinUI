<Application
    x:Class="Calculator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CalculatorButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Background" Value="{ThemeResource ButtonBackgroundThemeBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource ButtonForegroundThemeBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>

                <Setter Property="CornerRadius" Value="8"/>

                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="CalculatorNumberButtonStyle" TargetType="Button" BasedOn="{StaticResource CalculatorButtonStyle}">
                <Setter Property="Background" Value="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            </Style>

            <Style x:Key="CalculatorOperationButtonStyle" TargetType="Button" BasedOn="{StaticResource CalculatorButtonStyle}">
                <Setter Property="Background" Value="{ThemeResource ButtonBackgroundThemeBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            </Style>

            <Style x:Key="CalculatorEqualsButtonStyle" TargetType="Button" BasedOn="{StaticResource CalculatorButtonStyle}">
                <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>