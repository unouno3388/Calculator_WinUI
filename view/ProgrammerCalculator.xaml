<Page
    x:Class="Calculator.ProgrammerCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ViewModel"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:ProgrammerViewModel />
    </UserControl.DataContext>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding DisplayText}" 
                   FontSize="48" 
                   HorizontalAlignment="Right" 
                   Margin="0,10,12,0"/>

        <StackPanel Grid.Row="1" Margin="12,10" Spacing="4">
            <RadioButton GroupName="Radix" IsChecked="{Binding IsHexMode, Mode=TwoWay}" Tag="16" Content="HEX" Style="{StaticResource DefaultRadioButtonStyle}">
                <RadioButton.ContentTemplate>
                    <DataTemplate>
                        <Grid Width="300">
                            <TextBlock Text="HEX" HorizontalAlignment="Left" Foreground="Gray"/>
                            <TextBlock Text="{Binding DataContext.HexValue, ElementName=Root}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </RadioButton.ContentTemplate>
            </RadioButton>

            <RadioButton GroupName="Radix" IsChecked="{Binding IsDecMode, Mode=TwoWay}" Tag="10" Content="DEC">
                <RadioButton.ContentTemplate>
                    <DataTemplate>
                        <Grid Width="300">
                            <TextBlock Text="DEC" HorizontalAlignment="Left" FontWeight="Bold"/>
                            <TextBlock Text="{Binding DataContext.DecValue, ElementName=Root}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </RadioButton.ContentTemplate>
            </RadioButton>

            <RadioButton GroupName="Radix" IsChecked="{Binding IsOctMode, Mode=TwoWay}" Tag="8" Content="OCT">
                <RadioButton.ContentTemplate>
                    <DataTemplate>
                        <Grid Width="300">
                            <TextBlock Text="OCT" HorizontalAlignment="Left" Foreground="Gray"/>
                            <TextBlock Text="{Binding DataContext.OctValue, ElementName=Root}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </RadioButton.ContentTemplate>
            </RadioButton>

            <RadioButton GroupName="Radix" IsChecked="{Binding IsBinMode, Mode=TwoWay}" Tag="2" Content="BIN">
                <RadioButton.ContentTemplate>
                    <DataTemplate>
                        <Grid Width="300">
                            <TextBlock Text="BIN" HorizontalAlignment="Left" Foreground="Gray"/>
                            <TextBlock Text="{Binding DataContext.BinValue, ElementName=Root}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </RadioButton.ContentTemplate>
            </RadioButton>
        </StackPanel>

        <Grid Grid.Row="2" Margin="10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="::" Grid.Column="0" Background="Transparent" BorderThickness="0"/>
            <TextBlock Text="QWORD" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
            <TextBlock Text="MS" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
            <TextBlock Text="M v" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10" Margin="12,5">
            <Button Content="Bitwise" Background="Transparent" BorderThickness="0"/>
            <Button Content="BitShift" Background="Transparent" BorderThickness="0"/>
        </StackPanel>

        <Grid Grid.Row="4" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="A" Grid.Row="0" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="A" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="&lt;&lt;" Grid.Row="0" Grid.Column="1" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding BitwiseCommand}" CommandParameter="LSH"/>
            <Button Content="&gt;&gt;" Grid.Row="0" Grid.Column="2" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding BitwiseCommand}" CommandParameter="RSH"/>
            <Button Content="C" Grid.Row="0" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding ACClickCommand}"/>
            <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding BackClickCommand}">
                <FontIcon Glyph="&#xE751;" FontSize="16"/>
            </Button>

            <Button Content="B" Grid.Row="1" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="B" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="(" Grid.Row="1" Grid.Column="1" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="("/>
            <Button Content=")" Grid.Row="1" Grid.Column="2" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter=")"/>
            <Button Content="%" Grid.Row="1" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" Command="{Binding PercentageClickCommand}"/>
            <Button Content="/" Grid.Row="1" Grid.Column="4" Style="{StaticResource CalculatorOperationButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="/"/>

            <Button Content="C" Grid.Row="2" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="C" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="7" Grid.Row="2" Grid.Column="1" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="7"/>
            <Button Content="8" Grid.Row="2" Grid.Column="2" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="8"/>
            <Button Content="9" Grid.Row="2" Grid.Column="3" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="9"/>
            <Button Content="*" Grid.Row="2" Grid.Column="4" Style="{StaticResource CalculatorOperationButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="*"/>

            <Button Content="D" Grid.Row="3" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="D" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="4" Grid.Row="3" Grid.Column="1" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="4"/>
            <Button Content="5" Grid.Row="3" Grid.Column="2" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="5"/>
            <Button Content="6" Grid.Row="3" Grid.Column="3" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="6"/>
            <Button Content="-" Grid.Row="3" Grid.Column="4" Style="{StaticResource CalculatorOperationButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="-"/>

            <Button Content="E" Grid.Row="4" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="E" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="1" Grid.Row="4" Grid.Column="1" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="1"/>
            <Button Content="2" Grid.Row="4" Grid.Column="2" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="2"/>
            <Button Content="3" Grid.Row="4" Grid.Column="3" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="3"/>
            <Button Content="+" Grid.Row="4" Grid.Column="4" Style="{StaticResource CalculatorOperationButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="+"/>

            <Button Content="F" Grid.Row="5" Grid.Column="0" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="F" IsEnabled="{Binding IsHexMode}"/>
            <Button Content="+/-" Grid.Row="5" Grid.Column="1" Style="{StaticResource CalculatorNumberButtonStyle}"/>
            <Button Content="0" Grid.Row="5" Grid.Column="2" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="0"/>
            <Button Content="." Grid.Row="5" Grid.Column="3" Style="{StaticResource CalculatorNumberButtonStyle}" Command="{Binding ButtonClickCommand}" CommandParameter="." IsEnabled="False"/>
            <Button Content="=" Grid.Row="5" Grid.Column="4" Style="{StaticResource CalculatorEqualsButtonStyle}" Command="{Binding EqualsClickCommand}"/>
        </Grid>
    </Grid>
</Page>